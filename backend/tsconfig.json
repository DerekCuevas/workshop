{
  "compilerOptions": {
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "downlevelIteration": true,
    "noEmitOnError": true,
    "strict": true,
    "declaration": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2018",
    "lib": ["es2018", "dom"],
    "rootDirs": ["src"],
    "outDir": "lib"
  },
  "include": ["./src/**/*"]
}
